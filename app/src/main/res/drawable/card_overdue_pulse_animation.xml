<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    
    <item android:duration="500">
        <shape android:shape="rectangle">
            <solid android:color="@color/overdue_red" />
            <corners android:radius="20dp" />
            <stroke android:width="4dp" android:color="@color/overdue_red" />
        </shape>
    </item>
    
    <item android:duration="500">
        <shape android:shape="rectangle">
            <solid android:color="@color/overdue_background" />
            <corners android:radius="20dp" />
            <stroke android:width="6dp" android:color="@color/overdue_red" />
        </shape>
    </item>
    
</animation-list>
