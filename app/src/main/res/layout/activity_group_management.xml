<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_medium"
        android:background="@color/medical_blue"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Управление группами"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCreateGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать группу"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/white"
            app:icon="@android:drawable/ic_input_add"
            app:iconTint="@color/white" />

    </LinearLayout>

    <!-- Статистика групп -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_medium"
        android:background="@color/medical_gray"
        android:alpha="0.1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textTotalGroups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/medical_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Групп"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/medical_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textTotalMedicines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/medical_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Лекарств в группах"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/medical_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textAveragePerGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/medical_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Среднее в группе"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/medical_gray" />

        </LinearLayout>

    </LinearLayout>

    <!-- Кнопки быстрых действий -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_medium">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAutoGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Автогруппировка"
            android:textSize="@dimen/text_size_small"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginEnd="@dimen/margin_small"
            app:icon="@android:drawable/ic_menu_sort_by_size"
            app:iconSize="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonClearGroups"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Очистить группы"
            android:textSize="@dimen/text_size_small"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginStart="@dimen/margin_small"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconSize="16dp" />

    </LinearLayout>

    <!-- Список групп -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewGroups"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/margin_small"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_group" />

    <!-- Пустое состояние -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📋"
            android:textSize="48sp"
            android:layout_marginBottom="@dimen/margin_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Группы не найдены"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/medical_gray"
            android:layout_marginBottom="@dimen/margin_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создайте первую группу для организации лекарств"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/medical_gray"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/margin_large" />

    </LinearLayout>

</LinearLayout> 