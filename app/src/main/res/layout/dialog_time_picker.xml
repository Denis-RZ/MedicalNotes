<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_time"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Часы -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hours"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/seekBarHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="23"
        android:progress="8"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Минуты -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/minutes"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/seekBarMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="59"
        android:progress="0"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Выбранное время -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selected_time"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textSelectedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="08:00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/medical_blue"
        android:layout_marginBottom="24dp" />

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout> 