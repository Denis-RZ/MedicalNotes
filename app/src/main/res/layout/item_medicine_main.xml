<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMedicine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <!-- Заголовок с названием и временем -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                android:id="@+id/textMedicineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название лекарства"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Метформин" />

            <TextView
                android:id="@+id/textMedicineTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary"
                android:background="@drawable/time_background"
                android:padding="@dimen/padding_small"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="08:00" />

        </LinearLayout>

        <!-- Дозировка -->
        <TextView
            android:id="@+id/textMedicineDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дозировка"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="start|center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="500 мг 2 раза в день" />

        <!-- Количество таблеток и статус пропуска -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                android:id="@+id/textMedicineQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Осталось: 0 таблеток"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Осталось: 15 таблеток" />

            <TextView
                android:id="@+id/textMissedStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПРОСРОЧЕНО"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/missed_background"
                android:padding="@dimen/padding_small"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Заметки -->
        <TextView
            android:id="@+id/textMedicineNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заметки"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/gray"
            android:layout_marginBottom="@dimen/margin_small"
            android:visibility="gone"
            tools:text="Принимать во время еды"
            tools:visibility="visible" />

        <!-- Кнопка принятия лекарства -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTakeMedicine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_large"
            android:text="ПРИНЯЛ"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:backgroundTint="@color/button_success"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            app:elevation="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 