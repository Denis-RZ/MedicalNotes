<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Медицинские заметки"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_medium" />

    <!-- Лекарства на сегодня -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Лекарства на сегодня"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_small" />

    <!-- Список лекарств -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTodayMedicines"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/margin_medium" />

    <!-- Кнопки управления -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonManageMedicines"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="ЛЕКАРСТВА"
        android:textSize="@dimen/text_size_medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:backgroundTint="@color/medical_blue"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cornerRadius="8dp" />

    <!-- Кнопка переключения режима для пожилых -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonToggleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="РЕЖИМ ДЛЯ ПОЖИЛЫХ"
        android:textSize="@dimen/text_size_medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:backgroundTint="@color/medical_green"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cornerRadius="8dp" />

    <!-- Кнопки управления -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_small">

        <!-- Кнопка показа/скрытия логов -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonToggleLogs"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ЛОГИ"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:backgroundTint="@color/medical_gray"
            android:textColor="@color/white"
            app:cornerRadius="8dp" />

        <!-- Кнопка экспорта данных -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonExportData"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ЭКСПОРТ"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:backgroundTint="@color/medical_gray"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/margin_small"
            app:cornerRadius="8dp" />

        <!-- Кнопка тестирования групп -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTestGroups"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ТЕСТ ГРУПП"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:backgroundTint="@color/medical_blue"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/margin_small"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <!-- Логи (скрыты по умолчанию) -->
    <LinearLayout
        android:id="@+id/layoutLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ЛОГИ СИСТЕМЫ:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/medical_blue"
            android:layout_marginBottom="@dimen/margin_small" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/black"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:text="Логи загрузки...\n" />

        </ScrollView>

        <!-- Кнопка очистки логов -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonClearLogs"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="ОЧИСТИТЬ ЛОГИ"
            android:textSize="10sp"
            android:backgroundTint="@color/medical_red"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_small"
            app:cornerRadius="6dp" />

    </LinearLayout>

</LinearLayout> 