<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Медицинские заметки"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_medium" />

    <!-- Лекарства на сегодня -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Лекарства на сегодня"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_small" />

    <!-- Список лекарств -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTodayMedicines"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/margin_medium" />

    <!-- Кнопки управления -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonManageMedicines"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="УПРАВЛЕНИЕ ЛЕКАРСТВАМИ"
        android:textSize="@dimen/text_size_medium"
        android:backgroundTint="@color/medical_blue"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cornerRadius="8dp" />

    <!-- Кнопка остановки вибрации -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStopVibration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="ОСТАНОВИТЬ ВИБРАЦИЮ"
        android:textSize="@dimen/text_size_medium"
        android:backgroundTint="@color/medical_red"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cornerRadius="8dp" />

    <!-- Кнопка переключения режима для пожилых -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonToggleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="ВКЛЮЧИТЬ РЕЖИМ ДЛЯ ПОЖИЛЫХ"
        android:textSize="@dimen/text_size_medium"
        android:backgroundTint="@color/medical_green"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cornerRadius="8dp" />

    <!-- Кнопка очистки логов -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonClearLogs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="ОЧИСТИТЬ ЛОГИ"
        android:textSize="12sp"
        android:backgroundTint="@color/medical_gray"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_small"
        app:cornerRadius="8dp" />

    <!-- Логи -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ЛОГИ СИСТЕМЫ:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/medical_blue"
        android:layout_marginBottom="@dimen/margin_small" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/black"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:text="Логи загрузки...\n" />

    </ScrollView>

</LinearLayout> 