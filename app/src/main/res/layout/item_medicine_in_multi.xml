<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small"
    android:background="@drawable/medicine_item_background"
    android:layout_marginBottom="2dp"
    android:gravity="center_vertical">

    <!-- Цветной индикатор -->
    <View
        android:id="@+id/viewColorIndicator"
        android:layout_width="8dp"
        android:layout_height="40dp"
        android:background="@color/primary"
        android:layout_marginEnd="@dimen/margin_small" />

    <!-- Информация о лекарстве -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Название лекарства -->
        <TextView
            android:id="@+id/textMedicineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название лекарства"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Аспирин" />

        <!-- Дозировка и количество -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textMedicineDosage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="500 мг"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/dark_gray"
                android:gravity="start|center_vertical"
                tools:text="500 мг" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small" />

            <TextView
                android:id="@+id/textMedicineQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 таблетка"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/dark_gray"
                tools:text="1 таблетка" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small" />

            <TextView
                android:id="@+id/textRemainingQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Осталось: 15"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/dark_gray"
                tools:text="Осталось: 15" />

        </LinearLayout>

    </LinearLayout>

    <!-- Предупреждение о низком количестве -->
    <TextView
        android:id="@+id/textLowStockWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠️"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/medical_red"
        android:visibility="gone"
        android:layout_marginStart="@dimen/margin_small"
        tools:visibility="visible" />

    <!-- Статус принятия -->
    <ImageView
        android:id="@+id/imageTakenStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_send"
        android:tint="@color/medical_green"
        android:visibility="gone"
        android:layout_marginStart="@dimen/margin_small"
        tools:visibility="visible" />

</LinearLayout> 