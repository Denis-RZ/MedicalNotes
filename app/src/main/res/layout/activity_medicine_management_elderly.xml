<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".MedicineManagementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="УПРАВЛЕНИЕ ЛЕКАРСТВАМИ"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_large" />

        <!-- Кнопка SOS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSOS"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_extra_large"
            android:text="КНОПКА SOS"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:backgroundTint="@color/sos_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_large"
            app:cornerRadius="12dp"
            app:elevation="8dp" />

        <!-- Быстрые действия -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_large">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCallSon"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_large"
                android:layout_weight="1"
                android:text="СЫН"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:backgroundTint="@color/button_primary"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/margin_small"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonJournal"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_large"
                android:layout_weight="1"
                android:text="ЖУРНАЛ"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:backgroundTint="@color/button_secondary"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/margin_small"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <!-- Управление лекарствами -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💊 МОИ ЛЕКАРСТВА"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="@dimen/margin_medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAllMedicines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large" />

        <!-- Действия с лекарствами -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_large">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddMedicine"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:text="➕ ДОБАВИТЬ"
                android:textSize="@dimen/text_size_medium"
                android:backgroundTint="@color/button_success"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/margin_small"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEditMedicine"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:text="ИЗМЕНИТЬ"
                android:textSize="@dimen/text_size_medium"
                android:backgroundTint="@color/button_primary"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/margin_small"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <!-- Настройки -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="НАСТРОЙКИ"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="@dimen/margin_medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="🔧 НАСТРОЙКИ ПРИЛОЖЕНИЯ"
            android:textSize="@dimen/text_size_medium"
            android:backgroundTint="@color/button_secondary"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_small"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonNotifications"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="🔔 НАСТРОЙКИ УВЕДОМЛЕНИЙ"
            android:textSize="@dimen/text_size_medium"
            android:backgroundTint="@color/button_secondary"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_small"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBackup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="💾 СОХРАНИТЬ ДАННЫЕ"
            android:textSize="@dimen/text_size_medium"
            android:backgroundTint="@color/button_secondary"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_large"
            app:cornerRadius="8dp" />

        <!-- Кнопка возврата -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="🔙 ВЕРНУТЬСЯ НАЗАД"
            android:textSize="@dimen/text_size_medium"
            android:backgroundTint="@color/button_secondary"
            android:textColor="@color/white"
            app:cornerRadius="8dp" />

    </LinearLayout>

</ScrollView> 