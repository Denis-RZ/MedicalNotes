<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <!-- Заголовок группы -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                android:id="@+id/textGroupName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название группы"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/medical_blue" />

            <TextView
                android:id="@+id/textMedicineCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 лекарств"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/medical_gray"
                android:background="@drawable/status_background"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Список лекарств -->
        <TextView
            android:id="@+id/textMedicineList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список лекарств"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/medical_gray"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- Кнопки действий -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Переименовать"
                android:textSize="@dimen/text_size_small"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="@dimen/margin_small" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Удалить"
                android:textSize="@dimen/text_size_small"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:textColor="@color/medical_red"
                app:strokeColor="@color/medical_red" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 