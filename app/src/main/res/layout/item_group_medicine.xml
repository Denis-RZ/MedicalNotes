<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    style="@style/Widget.Material3.CardView.Filled">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <!-- Order in group -->
                    <com.google.android.material.chip.Chip
                android:id="@+id/textOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorOnPrimary"
                app:chipBackgroundColor="?attr/colorPrimary"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="?attr/colorOutline"
                android:layout_marginEnd="@dimen/margin_small"
                android:contentDescription="Порядок в группе"
                tools:text="1" />

        <!-- Medicine information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textMedicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название лекарства"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Аспирин" />

            <TextView
                android:id="@+id/textMedicineDosage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дозировка"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="500 мг" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small">

                <!-- Time -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/textMedicineTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    app:chipBackgroundColor="?attr/colorPrimaryContainer"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="?attr/colorOutline"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:contentDescription="Время приема"
                    tools:text="08:00" />

                <!-- Quantity -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/textRemainingQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 таблеток"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:chipBackgroundColor="?attr/colorSurfaceVariant"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="?attr/colorOutline"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:contentDescription="Количество остатка"
                    tools:text="25 таблеток" />

                <!-- Status -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="СЕГОДНЯ"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/medical_green"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="?attr/colorOutline"
                    android:contentDescription="Статус лекарства"
                    tools:text="СЕГОДНЯ" />

            </LinearLayout>

        </LinearLayout>

        <!-- Control buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_small">

            <!-- Edit button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_edit"
                app:iconSize="20dp"
                app:iconTint="?attr/colorPrimary"
                android:layout_marginBottom="@dimen/margin_small"
                android:contentDescription="Редактировать лекарство"
                style="@style/Widget.Material3.Button.IconButton" />

            <!-- Move up button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMoveUp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_arrow_up"
                app:iconSize="20dp"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="@dimen/margin_small"
                android:contentDescription="Переместить вверх"
                style="@style/Widget.Material3.Button.IconButton" />

            <!-- Move down button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMoveDown"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_arrow_down"
                app:iconSize="20dp"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="@dimen/margin_small"
                android:contentDescription="Переместить вниз"
                style="@style/Widget.Material3.Button.IconButton" />

            <!-- Remove button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRemove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="20dp"
                app:iconTint="@color/medical_red"
                android:contentDescription="Удалить из группы"
                style="@style/Widget.Material3.Button.IconButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 